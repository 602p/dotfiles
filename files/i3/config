set $mode_shitpost_clubby (p) prime (h) horn (f) flamingo (r) rcon (k) kill mpv (m) toggle mute (a) AKSHAYVIDEO clips (t) TTS (d) deez nuts
mode "$mode_shitpost_clubby" {
    bindsym p exec bash -c "source ~/.ssh-agent-info && ssh clubby ls"
    bindsym h exec bash -c "source ~/.ssh-agent-info && ssh clubby mpv \"/home/clubby/mps/mlg.webm\""
    bindsym f exec bash -c "source ~/.ssh-agent-info && ssh clubby mpv \"/home/clubby/mps/kkb.webm\""; mode "default"
    bindsym r exec bash -c "source ~/.ssh-agent-info && python3 ~/.config/i3/clubby_remote.py clubby@clubby"; mode "default"
    bindsym k exec bash -c "source ~/.ssh-agent-info && ssh clubby@clubby killall mpv"; mode "default"
    bindsym m exec bash -c "source ~/.ssh-agent-info && ssh clubby@clubby amixer -q -D pulse sset Master toggle"; mode "default"
    bindsym t exec bash -c "source ~/.ssh-agent-info && dmenu -p TTS: </dev/null | ssh clubby festival --tts"; mode default
    bindsym a exec bash -c "source ~/.ssh-agent-info && ssh clubby mpv AKSHAYVIDEO/$(cat ~/.config/i3/akshayclips.txt | dmenu -i -p clip | python3 ~/.config/i3/akshayhelper.py)"; mode default
    bindsym d exec bash -c "source ~/.ssh-agent-info && ssh clubby "echo deez nuts | lpr"; mode default

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

